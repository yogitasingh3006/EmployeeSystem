@model Employee

<partial name="_Notifications" />

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update User Details</h2>
            <hr/>
        </div>
         <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Employee" asp-action="AdminPage" class="btn btn-secondary" style="width:150px">Back To List</a>
 
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="EmailId"></label>
            <input asp-for="EmailId" class="form-control" />
            <span asp-validation-for="EmailId" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="Password"></label>
            <input value="@Model.Password.ToString()" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input value="@Model.ConfirmPassword.ToString()" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DepartmentId"></label>
            <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfNames,"Value","Text"))"></select> 
           
        </div>
         <div class="mb-3">
            <label asp-for="Role"></label>
            <select asp-for="Role" class="form-control">
                <option>Admin</option>
                <option>Employee</option>
            </select>
        </div>
          </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}


