@using EmployeeSystem.Models.Helper
@model IEnumerable<ResultModel>
@{
    ViewData["Title"] = "AdminPage";
}
<partial name="_Notifications" />

<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">List of all Employees</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="AddUser" ><i class="bi bi-file-plus"></i>Add User</a>

    </div>
     <div class="col-3">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="AddDepartment" ><i class="bi bi-file-plus"></i>Add Department</a>
    </div>
    </div>
    <br/>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    EmaiID
                </th>
                <th>
                    Password
                </th>
                <th>
                    City
                </th>
                <th>
                    PhoneNo.
                </th>
                <th>
                    Role
                </th>
                <th>
                    Department
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Emp.Name
                    </td>
                     <td width="50%">
                        @obj.Emp.EmailId
                    </td>
                     <td width="50%">
                        @obj.Emp.Password
                    </td>
                     <td width="50%">
                        @obj.Emp.City
                    </td>
                     <td width="50%">
                        @obj.Emp.Phone
                    </td>
                     <td width="50%">
                        @obj.Emp.Role
                    </td>
                     <td width="50%">
                        @obj.Dept.DepartName
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="Edit" asp-route-id="@obj.Emp.Id" id="@obj.Emp.Id" class="btn btn-primary mx-2"><i class="bi bi-pen"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.Emp.Id" id="@obj.Emp.EmailId" class="btn btn-danger mx-2"><i class="bi bi-archive-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
     <div class="col-3">
        <a class="btn btn-primary" asp-controller="Employee" asp-action="Logout" >Logout</a>
    </div>
</div>

